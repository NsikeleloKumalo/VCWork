<Window x:Class="Part_Three_POE.Clear_Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part_Three_POE"
        mc:Ignorable="d"
        Background="Tan"
        Title="Clear_Recipe" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter the name of the recipe to clear:" />
            <TextBox x:Name="recipeNameTextBox" />
            <Button x:Name="ClearRecipe" Content="Clear Recipe" Click="ClearRecipe_Click"  />

            <StackPanel x:Name="resultPanel" />
            <Button Content="Main menu"  Background="Chocolate" Margin="30" Click="Button_Click" />
        </StackPanel>
    </Grid>

</Window>
