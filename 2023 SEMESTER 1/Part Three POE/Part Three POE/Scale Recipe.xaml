<Window x:Class="Part_Three_POE.Scale_Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part_Three_POE"
        mc:Ignorable="d"
        Title="Scale_Recipe"
        Height="600" 
        Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Tan">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter the name of the recipe to scale:" />
            <TextBox x:Name="recipeNameTextBox" />
            <TextBlock Text="Enter the scaling factor (0.5, 2, or 3):" />
            <TextBox x:Name="scalingFactorTextBox" />
            <Button x:Name="ScaleRecipe" Content="Scale Recipe" Click="ScaleRecipe_Click" />

            <TextBlock Text="Scaled Recipe:" FontWeight="Bold" />
            <StackPanel x:Name="scaledRecipePanel" />
            <Button x:Name="MainMenu" Content="Main Menu" 
                    Margin="40"
                    Foreground="Tan"
                    Background="Chocolate" Width="242" Click="MainMenu_Click" />
        </StackPanel>

    </Grid>
</Window>
