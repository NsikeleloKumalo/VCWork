<Window x:Class="FilesMainTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesMainTwo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Name" FontSize="25"/>
            <TextBox x:Name="txtName" Height="60"/>

            <TextBlock Text="Surname" FontSize="25"/>
            <TextBox x:Name="txtSurname" Height="60"/>

            <Button Content =" Save" Click="Button_Click" Height="40" Width="170" HorizontalAlignment="Left"></Button>
            <Button Content =" Load" Click="Button_Click" Height="40" Width="170" HorizontalAlignment="Left"></Button>


        </StackPanel>
    </Grid>
</Window>
