<Window x:Class="Part_Three_POE.Reset_Quantities"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part_Three_POE"
        mc:Ignorable="d"
        Title="Reset_Quantities" Height="600" 
        Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
         Background="Tan">

    <Grid>
        <StackPanel>
            <TextBlock Text="Enter the name of the recipe to reset quantities:" />
            <TextBox x:Name="recipeNameTextBox" />
            <Button x:Name="ResetQuantitiesButton" Content="Reset Quantities" Background="Chocolate" Margin="30" Click="ResetQuantitiesButton_Click" />

            <StackPanel x:Name="resultPanel" />

            <Button x:Name="MainMenu" Content="Main Menu" 
                Margin="40"
                Foreground="White"
                Background="Chocolate" Width="242" Click="MainMenu_Click" />
        </StackPanel>
    </Grid>

</Window>